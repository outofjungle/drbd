resource disk0
  {
  startup {
    wfc-timeout 30;
    outdated-wfc-timeout 20;
    degr-wfc-timeout 30;
  }

  net {
    cram-hmac-alg sha1;
    shared-secret sync_disk;
  }

  syncer {
    rate 100M;
    verify-alg sha1;
  }

  on primary-drbd.vagrantup.com {
    device minor 0;
    disk /dev/loop0;
    address 33.33.33.10:7789;
    meta-disk internal;
  }

  on secondary-drbd.vagrantup.com {
    device minor 0;
    disk /dev/loop0;
    address 33.33.33.11:1789;
    meta-disk internal;
  }
}
